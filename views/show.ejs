<%- include ('partials/header') -%>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="" />
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%= blog.body %></p>
      </div>
      <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit"
        >Edit</a
      >
      <form
        class="delete"
        action="/blogs/<%= blog._id %>?_method=DELETE"
        method="POST"
      >
        <button class="ui red basic button">Delete</button>
      </form>
    </div>
    <a href="/blogs/<%=blog._id%>/comment/new"> Add comment</a>
  </div>
</div>
<% blog.comments.forEach (function(comm){%>
<div><%=comm.author%></div>
<p><%=comm.content%></p>
<%})%> <%- include ('partials/footer') -%>
