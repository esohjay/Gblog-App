<%- include ('./partials/header') -%>
<div class="mes container"><%=mes%></div>
<div class="container">
  <div class="formgrp">
    <h3 class="logreg">Sign up</h3>
    <form action="/register" method="POST">
      <div class="form-group">
        <input
          type="text"
          name="firstname"
          placeholder="First name"
          class="form-control myctrl"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="lastname"
          class="form-control myctrl"
          placeholder="Last name"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="username"
          class="form-control myctrl"
          placeholder="Username"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          name="email"
          class="form-control myctrl"
          placeholder="Email adrdess"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          name="city"
          class="form-control myctrl"
          placeholder="Current city"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="tel"
          name="phone"
          class="form-control myctrl"
          placeholder="Phone number"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="date"
          name="dob"
          class="form-control myctrl"
          value="mm/dd/yyyy"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          name="password"
          class="form-control myctrl"
          placeholder="Password"
          required
        />
      </div>

      <input type="submit" value="Sign up" class="readmore btn myctrl" />
    </form>
    <p class="logreg">Already have an account? <a href="/login">Sign in</a></p>
  </div>
</div>
<%- include ('./partials/footer') -%>
