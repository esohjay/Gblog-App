<%- include ('../partials/header') -%>

<div class="container">
  <div class="formgrp">
    <h3>Edit <%= blog.title %></h3>
    <form
      class="ui form"
      action="/blogs/<%= blog._id %>?_method=PUT"
      method="POST"
    >
      <div class="form-group">
        <input
          type="text"
          class="form-control myctrl"
          name="title"
          value="<%= blog.title %>"
        />
      </div>
      <div class="form-group">
        <input
          type="file"
          id="image"
          class="readmore btn myctrl"
          name="blogImage"
          accept="blogImage/*"
        />
      </div>
      <div class="form-group">
        <textarea
          name="text"
          id="text"
          class="myctrl form-control"
          cols="30"
          rows="10"
        >
<%= blog.text %></textarea
        >
      </div>

      <input class="btn readmore myctrl" type="submit" />
    </form>
  </div>
</div>
<%- include ('../partials/footer') -%>
